description "Periodically update mydyns IP"

start on net-device-up

env config=/etc/default/mydyns-update

pre-start script
[ -e "$config" ] || { stop; exit 0; }
end script

script
while [ 1 ]
do
	/opt/spreedme-box/mydyns-update.sh
	if [ -f "/tmp/mydyns-update4" -o -f "/tmp/mydyns-update6" ]; then
		sleep 300
	else
		sleep 5
	fi
done
end script
